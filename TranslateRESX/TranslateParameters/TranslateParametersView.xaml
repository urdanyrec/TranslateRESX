<UserControl x:Class="TranslateRESX.TranslateParameters.TranslateParametersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TranslateRESX.TranslateParameters" 
             xmlns:converters="clr-namespace:TranslateRESX.Converters" 
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:domain="clr-namespace:TranslateRESX.Domain.Enums;assembly=TranslateRESX.Domain"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignWidth="800"
             cal:Bind.AtDesignTime="True"
             d:DataContext="{d:DesignInstance Type=local:TranslateParametersViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <ResourceDictionary>
            <converters:EnumToDescriptionConverter x:Key="EnumToDescriptionConverter" />
            <ObjectDataProvider
                x:Key="LanguageServices"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="domain:LanguageService" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
            <ObjectDataProvider
                x:Key="Languages"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="domain:LanguageType" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Orientation="Horizontal"
            HorizontalAlignment="Left"
            Margin="5">
            <TextBlock 
                VerticalAlignment="Center"
                Text="Ключ API: "/>
            <TextBox 
                Margin="5"
                Text="{Binding ApiKey}"
                Width="300"/>
            <ComboBox
                Width="100"
                Margin="5"
                ItemsSource="{Binding Source={StaticResource LanguageServices}}"
                SelectedItem="{Binding Service}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button
                Width="29"
                Height="29"
                Margin="5,0,0,0"
                cal:Message.Attach="[Event Click]=[Action OpenApiHistoryCommand()]">
                <StackPanel>
                    <Image Source="/Resources/Images/find.png"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1.3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid
                Margin="5"
                Grid.Row="0"
                Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel
                    VerticalAlignment="Center"
                    Orientation="Horizontal"
                    Grid.Column="0">
                    <TextBlock
                         Text="Файл источник: "/>
                    <TextBlock
                         Text="{Binding SourceFilenameWithExtention}"/>
                </StackPanel>
                <Button
                    Grid.Column="1"
                    Width="100"
                    Height="26"
                    Content="Загрузить файл"
                    cal:Message.Attach="[Event Click]=[Action LoadSourceFileCommand()]"/>
            </Grid>
            
            <StackPanel
                Margin="5"
                Grid.Row="1"
                Grid.Column="0"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <TextBlock
                    VerticalAlignment="Center"
                    Text="Язык источника: "/>
                <ComboBox
                    Height="Auto"
                    Margin="5"
                    Width="100"
                    ItemsSource="{Binding Source={StaticResource Languages}}"
                    SelectedItem="{Binding SourceLanguage}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
            <Grid
                Grid.Row="0"
                Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition  Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="Выходной файл: "/>
                <TextBox
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="5"
                    Text="{Binding TargetFilenameWithExtention}" />
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="5"
                    VerticalAlignment="Center"
                    Text="Выходной каталог: "/>
                <TextBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5"
                    Text="{Binding TargetDirectory}"/>
                <Button
                    Grid.Row="1"
                    Grid.Column="2"
                    Content=". . ."
                    Width="30"
                    Height="22"
                    Margin="0,0,5,0"
                    cal:Message.Attach="[Event Click]=[Action SelectDirectoryCommand()]">
                </Button>
                <CheckBox
                    Grid.Column="0"
                    Grid.Row="2"
                    Grid.ColumnSpan="3"
                    Margin="5"
                    Content="Перезаписать все ключи (для уже существующего ресурса)"
                    IsChecked="{Binding RewriteAllKeys}"/>
            </Grid>
            <StackPanel
                Margin="5"
                Grid.Row="1"
                Grid.Column="1"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                <TextBlock
                    VerticalAlignment="Center"
                    Text="Язык перевода: "/>
                <ComboBox
                    Height="Auto"
                    Margin="5"
                    Width="100"
                    ItemsSource="{Binding Source={StaticResource Languages}}"
                    SelectedItem="{Binding TargetLanguage}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumToDescriptionConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
